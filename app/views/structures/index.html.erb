<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js" type='text/javascript'></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>

<h1>Liste des Structures</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Description</th>
      <th>Adresse</th>
      <th>Longitude</th>
      <th>Latitude</th>
      <th>Email</th>
      <th>Numéro de Téléphone</th>
      <th>Lien</th>
      <th>Type d'Etablissement</th>
      <th>Departement</th>
      <th>Publié</th>
      <th>Message</th>
      <th>Réponse</th>
      <th>Utilisateur</th>
      <th>Administrateur</th>
      <th>Approuvé</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @structures.each do |structure| %>
      <% if structure.approved == 1 || (user_signed_in? && (current_user.is_admin? || current_user == structure.user)) %>
        <tr>
          <td><%= structure.name %></td>
          <td><%= structure.description %></td>
          <td><%= structure.address %></td>
          <td><%= structure.longitude %></td>
          <td><%= structure.latitude %></td>
          <td><%= structure.email %></td>
          <td><%= structure.phone %></td>
          <td><%= structure.link %></td>
          <td><%= structure.juridical ? structure.juridical.name : "" %></td>
          <td><%= structure.departement ? structure.departement.name : "" %></td>
          <td><%= structure.published %></td>
          <td><%= structure.message %></td>
          <td><%= structure.reply %></td>
          <td><%= structure.user ? structure.user.email : "" %></td>
          <td><%= structure.admin ? structure.admin.email : "" %></td>
          <td><%= structure.approved == 1 ? "accepted" : "pending" %></td>
          <td><%= link_to 'Show', structure %></td>
          <% if user_signed_in? %>
            <% if current_user.is_admin? || (current_user == structure.user && structure.approved != 1) %>
              <td><%= link_to 'Edit', edit_structure_path(structure) %></td>
            <% end %>
            <% if current_user.is_admin? || current_user == structure.user %>
              <td><%= link_to 'Destroy', structure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br />

<div style='width: 800px;'>
  <div id="map" style='width: 800px; height: 400px;'></div>
</div>

<br />

<script type="text/javascript">
  handler = Gmaps.build('Google');
    handler.buildMap({
      provider: {
        disableDefaultUI: true
        // pass in other Google Maps API options here
      },
      internal: {
        id: 'map'
      }
    },
    function() {
          markers = handler.addMarkers(<%=raw @hash.to_json %>);
          handler.bounds.extendWith(markers);
          handler.fitMapToBounds();
    }
  );
</script>


<br />

<% if user_signed_in? %>
  <%= link_to 'New Structure', new_structure_path %>
<% end %>
