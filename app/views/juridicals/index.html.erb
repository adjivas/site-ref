<article>
  <% if user_signed_in? && current_user.is_admin? %>
    <h1>Liste des types d'établissements</h1>

    <table>
      <thead>
        <tr>
          <th>Type</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @juridicals.each do |juridical| %>
          <tr>
            <td><%= juridical.name %></td>
            <td><%= link_to 'Voir', juridical %></td>
            <td><%= link_to 'Éditer', edit_juridical_path(juridical) %></td>
            <td><%= link_to 'Détruire', juridical, method: :delete, data: { confirm: 'Êtes-vous sur ?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'Ajouter un type d\'établissement', new_juridical_path %>
  <% end %>
</article>
