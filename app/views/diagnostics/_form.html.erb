<%= form_for(@diagnostic) do |f| %>
  <% if @diagnostic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@diagnostic.errors.count, "error") %> prohibited this diagnostic from being saved:</h2>

      <ul>
      <% @diagnostic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Nom :' %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description, 'Description :' %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :help, 'Aide :' %><br>
    <%= f.text_field :help %>
  </div>
  <div class="field">
    <%= f.label :adult, 'Adulte :' %><br>
    <%= f.number_field :adult %>
  </div>
  <div class="field">
    <%= f.label :duration, 'Durée :' %><br>
    <%= f.date_select :duration %>
  </div>
  <div class="field">
    <%= f.label :diagnostic_id, 'Diagnostique :' %><br>
    <%= f.collection_select(:diagnostic_ids, Diagnostic.all, :id, :name, {:prompt => "Selectionner votre dependence"}, {:multiple => true}) %>
  </div>
  <div class="field">
    <%= f.label :departement_id, 'Département :' %><br>
    <%= f.collection_select :departement_id, Departement.order(:name), :id, :name, include_blank: true, :required => true %>
  </div>
  <div class="actions">
    <%= f.submit "Enregistrer" %>
  </div>
<% end %>
