<!DOCTYPE html>
<html>
  <head>
    <title>Ref</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav>
      <% if user_signed_in? %>
        <%= link_to('Logout', destroy_user_session_path) %>
        <a><%= current_user.email %></a>
      <% else %>
        <%= link_to('Logint', new_user_session_path) %>
      <% end %>

      <input type="submit" value="&#9776;" onClick="javascript:event_hidden()" />
      <input type="search" placeholder="search" autocomplete="off" />

      <ul>
        <% if user_signed_in? %>
          <% if current_user.is_admin? %>
            <li><%= link_to('User', users_path) %></li>
            <li><%= link_to('Language', languages_path) %></li>
            <li><%= link_to('Juridical', juridicals_path) %></li>
            <li><%= link_to('departement', departements_path) %></li>
          <% end %>
        <% end %>
        <li><%= link_to('Paper', papers_path) %></li>
        <li><%= link_to('Project', projects_path) %></li>
        <li><%= link_to('Structure', structures_path) %></li>
        <li><%= link_to('Diagnostic', diagnostics_path) %></li>
      </ul>
       <aside id="loutre">loutre</aside>
    </nav>
    <section>
      <%= yield %>
    </section>
  </body>
</html>
