<!DOCTYPE html>
<html>
<head>
  <title>Ref</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
       <p class="notice"><%= notice %></p>
       <p class="alert"><%= alert %></p>

       <% if user_signed_in? %>
         <%= link_to('Logout', destroy_user_session_path) %>
         <p><%= current_user.email %></p>
         <% if current_user.is_admin? %>
           <ul>
             <li><%= link_to('User', users_path) %></li>
             <li><%= link_to('Language', languages_path) %></li>
             <li><%= link_to('Juridical', juridicals_path) %></li>
             <li><%= link_to('departement', departements_path) %></li>
           </ul>
         <% end %>
       <% else %>
          <%= link_to('Logint', new_user_session_path) %>
       <% end %>
       <ul>
         <li><%= link_to('Paper', papers_path) %></li>
         <li><%= link_to('Project', projects_path) %></li>
         <li><%= link_to('Structure', structures_path) %></li>
         <li><%= link_to('Diagnostic', diagnostics_path) %></li>
       </ul>
<%= yield %>

</body>
</html>
