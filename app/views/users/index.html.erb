<article>
  <% if user_signed_in? %>
    <h1>Listing users</h1>

    <table>
      <thead>
        <tr>
          <th>Email</th>
          <th>Is admin</th>
          <th>Link</th>
          <th>Gender</th>
          <th>Birthdate</th>
          <th>Begin</th>
          <th>End</th>
          <th>Info research</th>
          <th>Email research</th>
          <th>Departement</th>
          <th>Diagnostic</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <% if current_user == user || (current_user.is_admin? && (user.info_research? || user.email_research?)) %>'
            <tr>
              <% if current_user == user || user.email_research? %>
                <td><%= user.email %></td>
              <% end %>
              <% if current_user == user || user.info_research? %>
                <td><%= user.is_admin %></td>
                <td><%= user.link %></td>
                <td><%= user.gender == 0 ? "man" : "women" %></td>
                <td><%= user.birthdate %></td>
                <td><%= user.begin %></td>
                <td><%= user.end %></td>
                <td><%= user.departement ? user.departement.name : "" %></td>
                <td><%= user.diagnostic ? user.diagnostic.name : "" %></td>
              <% end %>
              <td><%= link_to 'Show', user %></td>
              <% if current_user == user || current_user.is_admin? %>
                <td><%= link_to 'Edit', edit_user_path(user) %></td>
              <% end %>
              <% if current_user == user %>
                <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% end %>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>

    <br />

    <%= link_to 'New User', new_user_path %>
  <% end %>
</article>
