<%= form_for(@user) do |f| %>
  <% if user_signed_in? %>
    <% if current_user == @user || current_user.is_admin? %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

        <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <% if current_user.is_admin? %>
      <div class="field">
        <%= f.label :is_admin %><br>
        <%= f.check_box :is_admin %>
      </div>
    <% end %>
    <% if current_user == @user %>
      <div class="field">
        <%= f.label :link %><br>
        <%= f.text_field :link %>
      </div>
      <div class="field">
        <%= f.label :gender %><br>
        <%= select_tag( :gender , options_for_select([['Anonyme', 0], ['Man', 1], ['Women', 2]], @user.gender)) %>
      </div>
      <div class="field">
        <%= f.label :birthdate %><br>
        <%= f.date_select :birthdate %>
      </div>
      <div class="field">
        <%= f.label :begin %><br>
        <%= f.date_select :begin %>
      </div>
      <div class="field">
        <%= f.label :end %><br>
        <%= f.date_select :end %>
      </div>
      <div class="field">
        <%= f.label :info_research %><br>
        <%= f.check_box :info_research %>
      </div>
      <div class="field">
        <%= f.label :email_research %><br>
        <%= f.check_box :email_research %>
      </div>
      <div class="field">
        <%= f.label :departement_id %><br>
        <%= f.collection_select :departement_id, Departement.order(:name), :id, :name, include_blank: true %>
      </div>
      <div class="field">
        <%= f.label :diagnostic_id %><br>
        <%= f.collection_select :diagnostic_id, Diagnostic.order(:name), :id, :name, include_blank: true %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
 <% end %>
<% end %>
