<article>
  <p id="notice"><%= notice %></p>

  <p>
    <strong>Nom :</strong>
    <%= @project.name %>
  </p>

  <p>
    <strong>Lien :</strong>
    <%= @project.link %>
  </p>

  <p>
    <strong>Description :</strong>
    <%= @project.description %>
  </p>

  <p>
    <strong>Date de parution :</strong>
    <%= @project.from %>
  </p>

  <p>
    <strong>Logo :</strong>
    <%= @project.logo %>
  </p>

  <p>
    <strong>Publié le :</strong>
    <%= @project.published %>
  </p>

  <p>
    <strong>Approuvé :</strong>
    <%= @project.approved %>
    <%= @project.approved == true ? "Oui" : "En attente" %>
  </p>

  <% if current_user.is_admin || current_user == @project.user %>
    <p>
      <strong>Utilisateur :</strong>
      <%= @project.user ? @project.user.email : "" %>
    </p>

    <p>
      <strong>Administrateur :</strong>
      <%= @project.admin ? @project.admin.email : "" %>
    </p>

    <p>
      <strong>Message :</strong>
      <%= @project.message %>
    </p>

    <p>
      <strong>Réponse :</strong>
      <%= @project.reply %>
    </p>
  <% end %>

  <% if current_user.is_admin || (current_user == @project.user && @project.approved == false) %>
    <%= link_to 'Éditer', edit_project_path(@project) %> |
  <% end %>
  <%= link_to 'Retour', projects_path %>
</article>
