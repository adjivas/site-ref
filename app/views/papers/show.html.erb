<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @paper.name %>
</p>

<p>
  <strong>Link:</strong>
  <%= @paper.link %>
</p>

<p>
  <strong>Description:</strong>
  <%= @paper.description %>
</p>

<p>
  <strong>From:</strong>
  <%= @paper.from %>
</p>

<p>
  <strong>Language:</strong>
  <%= @paper.language.name %>
</p>

<p>
  <strong>Diagnostic:</strong>
  <%= @paper.diagnostic.name %>
</p>

<p>
  <strong>Published:</strong>
  <%= @paper.published %>
</p>

<p>
  <strong>Approved:</strong>
  <%= @paper.approved %>
</p>

<% if current_user.is_admin || current_user == @paper.user %>
  <p>
    <strong>User:</strong>
    <%= @paper.user.email %>
  </p>

  <p>
    <strong>Admin:</strong>
    <%= @paper.admin %>
  </p>

  <p>
    <strong>Message:</strong>
    <%= @paper.message %>
  </p>

  <p>
    <strong>Reply:</strong>
    <%= @paper.reply %>
  </p>
<% end %>

<% if current_user.is_admin || (current_user == @paper.user && @paper.approved == 0) %>
  <%= link_to 'Edit', edit_paper_path(@paper) %> |
<% end %>
<%= link_to 'Back', papers_path %>
